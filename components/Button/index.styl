.root
    background-color white
    border-radius 10px
    padding 0 5u
    font-size 2u
    color grey
    line-height 5u
    border 1px solid #DDDDDD
    width 100%
    text-align center

.secondary
    background-color #8cc9f0
    & > .text
        color #ffffff

.transparent
    border-radius 8px
    background-color transparent
    color white
    //box-shadow inset 0 0 0 1px rgba(255, 255, 255, 0.35)
    & > .text
        color #ffffff