.imageView
    width 13em
    height 13em
    border-radius 100%
    border solid 1px rgb(221, 221, 221)
    padding 0.35em
    display flex
    justify-content center
    align-items center

.image
    width 100%
    height 100%
    border-radius 100%

.title, .description
    color black

.title
    margin-top 3u

.description
    color #636363
    font-size 2u
    margin-top 3u
    line-height 3u
    text-align center

.buttonContainer
    width 100%
    +tablet()
        flex-direction row
        justify-content center

.button
    margin-top 3u
    +tablet()
        width auto
        &.second
            margin-left 2u
