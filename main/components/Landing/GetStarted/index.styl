.title, .description
    color #636363

.description
    color #636363
    font-size 2u
    margin-top 3u
    line-height 3u
    text-align center

.buttonContainer
    width 100%
    margin-top 3u
    +tablet()
        flex-direction row
        justify-content center
        margin-top 5u

.button
    &.second
        margin-top 2u
        +tablet()
            margin-top 0
            margin-left 2u
    +tablet()
        margin-top 0
        width auto
