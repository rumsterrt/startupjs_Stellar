.root
    display flex
    justify-content center
    align-items center
    margin 4u 0 10u 0
    padding 0 2u 0 2u
    box-sizing border-box

.container
    display flex
    justify-content center
    align-items center
    +tablet()
        flex-direction row
        align-items flex-start

.title, .description
    color white

.title
    margin-top 2u
    font-size 3u

.description
    font-size 2u
    margin-top 4u
    line-height 3u

.button
    margin-top 4u
    +tablet()
        width auto

.top, .bottom
    width 100%
    align-items flex-start
    +tablet()
        width calc(50% - 10u)

.bottom
    margin-top 6u
    +tablet()
        margin-top 0
        margin-left 9u

.icon
    border-radius 100%
    border 1px solid white
    padding 1u
    box-sizing border-box
    margin-left 2u
    &.first
        margin-left 0

.icons
    margin-top 4u
    flex-direction row

.table
    margin-top 2u

.row
    flex-direction row
    margin-top 3u
.name, .value
    color white
.name 
    font-weight: 800
    flex 0 0 12u

.copyright
    color rgba(255, 255, 255, 0.65)
    font-size 1.2u
    margin-top 5u
    line-height 2u
    text-align left
    +tablet()
        font-size 1.5u
        line-height 2u
        text-align center

