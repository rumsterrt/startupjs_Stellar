.imageView
    width 16u
    height 16u
    border-radius 100%
    border solid 1px rgb(221, 221, 221)
    padding 1u
    justify-content center
    align-items center
    +tablet()
        width 24u
        height 24u
    +wide()
        width 28u
        height 28u

.icon
    justify-content center
    align-items center
    width 100%
    height 100%
    border-radius 100%
    border solid 1px rgb(221, 221, 221)

.title, .description, .subtitle
    color black

.title
    margin-top 3u

.subtitle
    margin-top 2u
    font-size 2u

.description
    color #636363
    font-size 0.9em
    margin-top 3u
    letter-spacing 0
    text-align center

.button
    margin-top 3u
    +tablet()
        margin-top 4u
        width auto

.list
    box-sizing border-box
    margin-top 4u
    +tablet()
        justify-content space-between
        align-items center
        flex-direction row
        flex-wrap wrap

.listItem
    justify-content center
    align-items center
    margin 2u
    +tablet()
        width: calc(50% - 5u)
    +desktop()
        width: calc(33% - 5u)


